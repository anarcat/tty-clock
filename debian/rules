#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@

override_dh_auto_build:
	$(MAKE) CFLAGS="$(CFLAGS) $(CPPFLAGS) -Wall -g -I $$(ncurses5-config --includedir) $$(ncurses5-config --libs)"

override_dh_auto_install:
	PREFIX=/usr dh_auto_install
